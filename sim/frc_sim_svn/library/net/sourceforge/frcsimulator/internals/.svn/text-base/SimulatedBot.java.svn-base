package net.sourceforge.frcsimulator.internals;

import java.util.ArrayList;

/**
 *
 * @author wolf
 */
public class SimulatedBot {

	private static ArrayList<FrcBotSimComponent> components = new ArrayList();

	/**
	 * @param component The component to add
	 */
	public static void addSimComponent(FrcBotSimComponent component) {
		components.add(component);
	}

	public static ArrayList<FrcBotSimComponent> getSimComponents() {
		return components;
	}
}
